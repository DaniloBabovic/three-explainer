{
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "type": "module",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --web",
    "commit": "git-cz",
    "acp": "git add . && npm run commit && git push",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release --branches main"    
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@mapalchemy/explainer",
  "author": "Danilo Babovic",
  "module": "dist/explainer.esm.js",
  "size-limit": [
    {
      "path": "dist/explainer.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/explainer.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@size-limit/preset-small-lib": "^7.0.8",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "semantic-release": "^19.0.2",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DaniloBabovic/three-explainer.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "three": "0.140.2",
    "@types/three": "0.140.2",
    "@tweenjs/tween.js": "^18.6.4",
    "esbuild": "^0.14.42",
    "save": "^2.5.0"    
  }
}
